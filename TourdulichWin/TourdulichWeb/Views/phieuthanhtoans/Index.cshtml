        <td>
            @Html.DisplayFor(modelItem => item.tenphieu)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ngaytao)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.doandulich.tendoan)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.loaiphieu.tenloaiphieu)
